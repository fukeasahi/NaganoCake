<div class="container">
	<div class="row">
		<div class="col-xs-2">
		</div>
		<div class="col-xs-2">
			<h3>マイページ</h3>
		</div>
	</div>
	<div class="row" style="margin: 20px 0 0 0;">
		<div class="col-xs-2">
			<h4>登録情報</h4>
		</div>
		<div class="col-xs-1">
			<%= link_to ' 編集する', edit_end_users_path, class: 'btn btn-primary' %>
		</div>
		<div class="col-xs-1">
			<%= link_to ' パスワードを変更する', "#", class: 'btn btn-primary' %>
		</div>
	</div>
	<div class="row"  style="margin: 10px 0 0 0;">
		<div class="col-xs-6">
			<table class="table table-bordered">
			    <tr>
			      <td>氏名</td>
			      <td><%= current_end_user.last_name %><%= current_end_user.first_name %></td>
			    </tr>

			      <tr>
			        <td>カナ</td>
			        <td><%= current_end_user.last_name_kana %><%= current_end_user.first_name_kana %></td>
			      </tr>

			      <tr>
			        <td>郵便番号</td>
			        <td><%= current_end_user.postcode %></td>
			      </tr>

			      <tr>
			        <td>住所</td>
			        <td><%= current_end_user.user_address %></td>
			      </tr>

			      <tr>
			        <td>電話番号</td>
			        <td><%= current_end_user.phone_number %></td>
			      </tr>

			      <tr>
			        <td>メールアドレス</td>
			        <td><%= current_end_user.email %></td>
			      </tr>
			</table>
		</div>
	</div>
	<div class="row" style="margin: 10px 0 0 0;">
		<div class="col-xs-2">
			<h4>配送先</h4>
		</div>
		<div class="col-xs-1">
			<%= link_to ' 一覧を見る', "#", class: 'btn btn-primary' %>
		</div>
	</div>
	<div class="row"style="margin: 10px 0 0 0;">
		<div class="col-xs-2">
			<h4>注文履歴</h4>
		</div>
		<div class="col-xs-1">
			<%= link_to ' 一覧を見る', "#", class: 'btn btn-primary' %>
		</div>
	</div>
</div>

