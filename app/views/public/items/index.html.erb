<div class="container">
	<div class="row">
		<div class="col-xs-2">
			<table  class="table table-bordered">
			  <tr>
			    <th>ジャンル検索</th>
			  </tr>
			  <tr>
			    <td style="padding: 10px 0 100px 10px;">
			    	<p>ケーキ</p>
			    	<br style="padding: 10px 0 0 10px;"><p>焼き菓子</p>
			    	<br style="padding: 10px 0 0 10px;"><p>プリン</p>
			    	<br><p>キャンディ</p>
			    </td>
			  </tr>
			</table>
		</div>
		<div class="col-xs-10">
			<h3>商品一覧</h3>
			<div class="row">
			<% @items.each do |item| %>
				
				　<div class="col-md-3">
						<%= link_to(item) do %>
							<%= attachment_image_tag item, :image, :fill, 150, 150, format: 'jpeg' %><br>
							<%= item.name %><br>
							¥<%= (item.price * 1.1).round %>
						<% end %>
					</div>
				
     		<% end %>
     		</div>

		</div>
	</div>
</div>